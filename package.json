{
    "name": "scp-to-epub",
    "version": "1.5.0",
    "description": "Generate ebooks from scp foundation wiki articles",
    "main": "index.js",
    "bin": "dist/index.js",
    "types": "index.d.ts",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "pkg": "npx @yao-pkg/pkg build/staging --output build/release/",
        "build": "tsup",
        "package": "pwsh scripts/build.ps1 -CopyPuppeteerArtifacts"
    },
    "pkg": {
        "assets": [
            "/node_modules/@img/sharp-win32-x64/lib/**/*",
            "assets/**/*",
            "static/**/*"
        ]
    },
    "author": "Luke Selden",
    "license": "CC-BY-3.0",
    "devDependencies": {
        "@types/node": "^22.9.1",
        "@yao-pkg/pkg": "^6.1.1",
        "tsup": "^8.3.5",
        "typescript": "^5.6.3"
    },
    "dependencies": {
        "archiver": "^3.1.1",
        "color": "^3.1.2",
        "dot-prop": "^5.2.0",
        "get-stream": "^5.1.0",
        "got": "^9.6.0",
        "gray-matter": "^4.0.2",
        "js-yaml": "^3.13.1",
        "junk": "^3.1.0",
        "markdown-it": "^14.1.0",
        "markdown-it-attrs": "^4.2.0",
        "mime": "^2.4.4",
        "p-map": "^3.0.0",
        "puppeteer": "^23.8.0",
        "rimraf": "^3.0.0",
        "sharp": "^0.33.5",
        "turndown": "^6.0.0",
        "turndown-plugin-gfm": "^1.0.2",
        "yargs": "^14.2.0"
    }
